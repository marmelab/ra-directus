{
    "name": "ra-directus",
    "version": "2.1.0",
    "repository": "git@github.com:marmelab/ra-directus.git",
    "authors": [
        "Thibault Barrat <thibault@marmelab.com> (https://marmelab.com/)",
        "Gildas Garcia <gildas@marmelab.com> (https://marmelab.com/)"
    ],
    "license": "MIT",
    "files": [
        "*.md",
        "lib",
        "esm",
        "src"
    ],
    "main": "lib/index",
    "module": "esm/index.js",
    "types": "esm/index.d.ts",
    "sideEffects": false,
    "peerDependencies": {
        "react-admin": "^5.1.1"
    },
    "dependencies": {
        "jwt-decode": "^3.1.2"
    },
    "scripts": {
        "build": "yarn run build-cjs && yarn run build-esm",
        "build-cjs": "rimraf ./lib && tsc",
        "build-esm": "rimraf ./esm && tsc --outDir esm --module es2015",
        "watch": "tsc --outDir esm --module es2015 --watch",
        "lint": "eslint --fix ./src"
    },
    "devDependencies": {
        "@directus/sdk": "^10.3.1",
        "@types/jest": "^29.1.0",
        "jest": "^29.1.1",
        "jest-environment-jsdom": "^29.1.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^29.0.3",
        "typescript": "^5.5.4"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "jsdom",
        "collectCoverageFrom": [
            "**/*.js",
            "**/*.ts",
            "!__tests__/util.ts",
            "!coverage/**",
            "!**/node_modules/**"
        ],
        "verbose": true,
        "automock": false,
        "clearMocks": true,
        "testPathIgnorePatterns": [
            "/node_modules/"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    }
}
